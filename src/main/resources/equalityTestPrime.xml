<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="contourEqualityTest" class="decomposer.melody.equality.melodymovement.ContourMelodyMovementEqualityTest">
        <property name="maxNumberOfDiffDirectionIntervals" value="3"/>
    </bean>

    <bean id="inversionEqualityTest" class="decomposer.melody.equality.melodymovement.InversionMelodyMovementEqualityTest">
        <property name="maxNumberOfInvertedIntervals" value="1"/>
    </bean>

    <bean id="intervalsEqualityTest" class="decomposer.melody.equality.melodymovement.IntervalsMelodyMovementEqualityTest">
        <property name="maxNumberOfShiftedIntervals" value="2"/>
        <property name="maxShift" value="2"/>
    </bean>

    <bean id="orderEqualityTest" class="decomposer.melody.equality.melodymovement.OrderMelodyMovementEqualityTest">
        <property name="maxNumberOfIntervalsHavingSwappedNotes" value="2"/>
    </bean>

    <bean id="rhythmEqualityTest" class="decomposer.melody.equality.RhytmEqualityTest">
        <property name="maxNumberOfRhythmicallyDifferentNotes" value="1"/>
        <!--<property name="maxRhythmDeviationSteps" listValue="0.01"/>-->
        <property name="maxRhythmDeviationSteps" value="0.75"/>
    </bean>

</beans>