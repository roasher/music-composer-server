<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="formKeyEquality" class="ru.pavelyurkin.musiccomposer.equality.melody.KeyEquality"/>

    <bean id="formIntervalsEqualityTestWrapper" class="ru.pavelyurkin.musiccomposer.equality.melody.EqualNumberOfNotesRequired">
        <property name="equality" ref="formIntervalsEquality"/>
    </bean>

    <bean id="formIntervalsEquality" class="ru.pavelyurkin.musiccomposer.equality.melodymovement.IntervalsMelodyMovementEquality">
        <property name="maxNumberOfShiftedIntervals" value="3"/>
        <property name="maxShift" value="2"/>
    </bean>

    <bean id="formRhythmEquality" class="ru.pavelyurkin.musiccomposer.equality.melody.RhythmEquality">
        <property name="maxNumberOfRhythmicallyDifferentNotes" value="0"/>
        <property name="maxRhythmDeviationSteps" value="0"/>
    </bean>

    <bean id="formRhythmEqualityTestWrapper" class="ru.pavelyurkin.musiccomposer.equality.melody.EqualNumberOfNotesRequired">
        <property name="equality" ref="rhythmEquality"/>
    </bean>
    
    <bean id="formEqualityAnalyzerImpl" class="ru.pavelyurkin.musiccomposer.equality.form.MelodyFormEqualityAnalyzer">
        <property name="equalityTestPassThreshold" value="0.45"/>
    </bean>
    
    <bean id="formAnalyzer" class="ru.pavelyurkin.musiccomposer.equality.form.FormEquality">
        <property name="instrumentEqualityPassThreshold" value="0.5"/>
        <property name="instrumentEqualityFailThreshold" value="0.3"/>
    </bean>

</beans>